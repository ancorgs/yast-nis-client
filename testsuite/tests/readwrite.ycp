/**
 * Module:
 *   NIS client configuration
 *
 * Summary:
 *   Testsuite
 *
 * Authors:
 *   Martin Vidner <mvidner@suse.cz>
 *
 * $Id$
 */
{
    include "testsuite.ycp";
    import "Nis";

    map READ = $[
	// Runlevel:
	"init": $[
	    "scripts": $[
		"exists": true,
		"runlevel": $[
		    "portmap": $[
			"start": [ "3", "5"],
			"stop":	 [ "3", "5"],
			],
		    "ypbind": $[
			"start": [ "3", "5"],
			"stop":	 [ "3", "5"],
			],
		    "autofs": $[
			"start": [ "3", "5"],
			"stop":	 [ "3", "5"],
			],
		    ],
		// their contents is not important for ServiceAdjust
		"comment": $[
		    "portmap": $[],
		    "ypbind": $[],
		    "autofs": $[],
		    ],
		],
	    ],
	// targetpkg:
	"targetpkg": $[
	    // autofs
	    "installed": true,
	    ],
	// Nis itself:
	"etc": $[
	    "yp_conf": $[
		"servers": [ "10.20.30.40", "10.20.30.80" ],
		"domainservers": $[
		    "otherdomain": [ "1.2.3.4" ],
		    ],
		"broadcast": $[
		    "otherdomain": true,
		    ],
		],
	    "defaultdomain": "mydomain",
	    "nsswitch_conf": $[
		"passwd": "compat",
		"group": "compat",
		"automount": "files"
		],
	    ],
	"sysconfig": $[
	    "ypbind": $[
		"YPBIND_LOCAL_ONLY": "no",
		"YPBIND_BROADCAST": "no",
		"YPBIND_BROKEN_SERVER": "no",
		"YPBIND_OPTIONS": "",
		],
	    ],
	];

    map WRITE = $[
	];

    map EXECUTE = $[
	"target": $[
	    "bash_output": $[
		"exit": 0,
		"stdout": "",
		"stderr": "",
		],
	    ],
	];

    TEST (``(Nis::Read ()), [READ, WRITE, EXECUTE], nil);
    TEST (``(Nis::Write ()), [READ, WRITE, EXECUTE], nil);
}
